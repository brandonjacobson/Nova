# Nova Multi-Chain Backend Configuration
# Copy this file to .env and fill in your values

PORT=4000

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/nova

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# ===== SOLANA CONFIGURATION =====
# Solana Devnet RPC URL
SOLANA_RPC_URL=https://api.devnet.solana.com

# Optional: Solana private key for custodial operations
# Base58 encoded keypair (only needed if doing custodial transfers)
# SOLANA_PRIVATE_KEY=your-base58-encoded-keypair

# ===== ETHEREUM CONFIGURATION =====
# Ethereum Sepolia Testnet RPC URL (get from Infura/Alchemy)
ETH_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Optional: Ethereum private key for custodial operations
# Hex encoded private key (only needed if doing custodial transfers)
# ETH_PRIVATE_KEY=0xyour-private-key-hex

# ===== BITCOIN CONFIGURATION =====
# Bitcoin network (testnet or mainnet)
BTC_NETWORK=testnet

# BlockCypher API token (optional, for higher rate limits)
# Get from: https://www.blockcypher.com/
BLOCKCYPHER_TOKEN=

# ===== NESSIE (CAPITAL ONE SANDBOX) =====
# Get API key from: http://hackathon.capitalone.com/
NESSIE_API_KEY=your-capital-one-api-key
NESSIE_BASE_URL=http://api.nessieisreal.com

# Nova's holding account ID for collecting payments before cashout
NESSIE_HOLDING_ACCOUNT_ID=your-holding-account-id

# ===== DEMO RATES (USD) =====
# These are used for demo/hackathon purposes
# In production, you'd use live exchange rate APIs
DEMO_BTC_USD_RATE=60000
DEMO_ETH_USD_RATE=3000
DEMO_SOL_USD_RATE=150
